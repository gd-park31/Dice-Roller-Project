import java.util.Scanner;

public class DiceRoller {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        DiceProcessor diceProcessor = new DiceProcessor(); // Object for dice operations

        System.out.println("Welcome to the Dice Roller Program!");
        diceProcessor.collectDiceRolls(scanner); // Get user input

        System.out.println("\n--- Results ---");
        diceProcessor.displayResults(); // Display the results

        scanner.close();
    }
}
